<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/layout_welcome_page_1_splash_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/presto_p_white_png"
        app:tint="?colorSecondary"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/layout_welcome_page_1_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/layout_welcome_page_1_splash_image"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            style="@style/TextAppearance.Primary.Big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_appName"
            android:textSize="@dimen/font_size_title" />
    </LinearLayout>
</RelativeLayout>
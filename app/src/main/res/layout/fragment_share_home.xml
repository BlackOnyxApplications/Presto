<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.bhuvan_kumar.Presto.fragment.ShareHomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/TextAppearance.Primary.Big.SingleLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="18sp"
                android:padding="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/share_browser">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:id="@+id/share_icon"
                        android:tint="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_web_white_24dp"/>
                    <TextView
                        style="@style/TextAppearance.Primary.Big.SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_webShare"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_toRightOf="@+id/share_icon"
                        android:layout_toEndOf="@+id/share_icon"
                        android:textSize="18sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp">
                        <LinearLayout
                            android:id="@+id/sendLayoutButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_margin="10dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:srcCompat="@drawable/send"
                                app:tint="?colorSecondary"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"/>

                            <TextView
                                style="@style/TextAppearance.Primary.SingleLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/butn_send"
                                android:textSize="25sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp">
                    <LinearLayout
                        android:id="@+id/receiveLayoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/recieve"
                            app:tint="?colorSecondary"
                            android:layout_margin="10dp"/>

                        <TextView
                            style="@style/TextAppearance.Primary.SingleLine"
                            android:textSize="25sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/butn_receive"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/share_screen">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:id="@+id/share_screen_icon"
                        android:tint="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_web_white_24dp"/>
                    <TextView
                        style="@style/TextAppearance.Primary.Big.SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_screenShare"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_toRightOf="@+id/share_screen_icon"
                        android:layout_toEndOf="@+id/share_screen_icon"
                        android:textSize="18sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                style="@style/TextAppearance.Primary.SingleLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apps"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp"
                android:textSize="18sp"
                android:padding="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/game">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:id="@+id/ic_word_search"
                        android:tint="@color/colorSecondary"
                        app:srcCompat="@drawable/ic_word_search"/>
                    <TextView
                        style="@style/TextAppearance.Primary.Big.SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Word Find"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_toRightOf="@+id/ic_word_search"
                        android:layout_toEndOf="@+id/ic_word_search"
                        android:textSize="18sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:id="@+id/insta_card"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="@color/colorSecondary"
                            android:src="@drawable/instagram"
                            android:layout_gravity="center"/>
                        <TextView
                            style="@style/TextAppearance.Primary.Big.SingleLine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Instagram"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clean_card"
                    android:layout_margin="8dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="@color/colorSecondary"
                            android:src="@drawable/clean"
                            android:layout_gravity="center"/>
                        <TextView
                            style="@style/TextAppearance.Primary.Big.SingleLine"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cleaner"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_saver_card"
                    android:layout_margin="8dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:tint="@color/colorSecondary"
                            android:src="@drawable/whatsapp"
                            android:layout_gravity="center"/>
                        <TextView
                            style="@style/TextAppearance.Primary.Big.SingleLine"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/werb_app_view">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/werb_icon"
                        android:tint="@color/colorSecondary"
                        android:src="@drawable/werb_512"/>
                    <TextView
                        style="@style/TextAppearance.Primary.Big.SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Werb: Verbal app"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_toRightOf="@+id/werb_icon"
                        android:layout_toEndOf="@+id/werb_icon"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ad"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <FrameLayout
                android:id="@+id/fl_adplaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.facebook.ads.NativeAdLayout
                android:id="@+id/fb_native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

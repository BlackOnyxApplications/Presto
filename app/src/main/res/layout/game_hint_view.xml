<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/title_view">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/presto_p_white_png"
            android:tint="@color/colorSecondary"
            android:layout_margin="20dp"/>
        <TextView
            style="@style/TextAppearance.Primary.Big.SingleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_appName"
            android:textSize="24sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/title_view"
        android:layout_height="wrap_content"
        android:id="@+id/rl">
        <FrameLayout
            android:id="@+id/fl_adplaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.facebook.ads.NativeAdLayout
            android:id="@+id/fb_native_ad_container"
            android:layout_below="@+id/fl_adplaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_native_ad_container"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="false"
                        android:id="@+id/hint_text"
                        android:padding="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/black_dominant"/>
                </ScrollView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl"
        android:id="@+id/actionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/short_content_width_padding"
        android:paddingRight="@dimen/short_content_width_padding">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_btnx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/zxing_button_ok" />
    </LinearLayout>
</RelativeLayout>
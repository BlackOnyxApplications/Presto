<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        card_view:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/rl">
                <ImageView
                    android:id="@+id/mainImageView"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:fitsSystemWindows="true"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/video_layout"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_height="300dp">
                    <VideoView
                        android:id="@+id/mainVideoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_centerInParent="true"
                        android:focusable="false"
                        android:fitsSystemWindows="true"
                        android:focusableInTouchMode="false"/>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/playButtonImage"
                        card_view:srcCompat="@drawable/ic_play_arrow_white_24dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:tint="@color/colorSecondary"
                        android:background="@color/black_surface"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rl"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/shareID"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:padding="8dp">
                    <ImageView
                        android:background="@drawable/ic_share_white_24dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        style="@style/TextAppearance.Primary.Big.SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/butn_share"
                        android:layout_gravity="center"
                        android:textSize="18sp"/>
                </LinearLayout>
                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/downloadID"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:padding="8dp">
                    <ImageView
                        android:background="@drawable/ic_file_download_white_24dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        style="@style/TextAppearance.Primary.Big.SingleLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/butn_save"
                        android:layout_gravity="center"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>